{
  "name": "ediary-rest-api",
  "version": "1.0.0",
  "description": "Rest API Endpoints for e-Diary application",
  "main": "build/api/server.js",
  "scripts": {
    "start": "nodemon",
    "build": "tsc",
    "commit": "git-cz",
    "test": "jest"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/anishpb97/ediary-rest-api.git"
  },
  "author": "Anish P B",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/anishpb97/ediary-rest-api/issues"
  },
  "homepage": "https://github.com/anishpb97/ediary-rest-api#readme",
  "dependencies": {
    "dotenv": "^12.0.3",
    "express": "^4.17.2",
    "module-alias": "^2.2.2"
  },
  "devDependencies": {
    "@commitlint/cli": "^16.0.2",
    "@commitlint/config-conventional": "^16.0.0",
    "@semantic-release/changelog": "^6.0.1",
    "@semantic-release/commit-analyzer": "^9.0.2",
    "@semantic-release/git": "^10.0.1",
    "@semantic-release/npm": "^8.0.3",
    "@semantic-release/release-notes-generator": "^10.0.3",
    "@types/express": "^4.17.13",
    "@types/jest": "^27.4.0",
    "@types/node": "^17.0.8",
    "@types/supertest": "^2.0.11",
    "@typescript-eslint/eslint-plugin": "^5.9.1",
    "@typescript-eslint/parser": "^5.9.1",
    "commitizen": "^4.2.4",
    "eslint": "^8.6.0",
    "eslint-config-airbnb-base": "^15.0.0",
    "eslint-config-standard": "^16.0.3",
    "eslint-plugin-import": "^2.25.4",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-promise": "^6.0.0",
    "eslint-plugin-standard": "^5.0.0",
    "jest": "^27.4.7",
    "nodemon": "^2.0.15",
    "prettier": "^2.5.1",
    "supertest": "^6.2.1",
    "ts-jest": "^27.1.3",
    "ts-node": "^10.4.0",
    "typescript": "^4.5.4"
  },
  "_moduleAliases": {
    "@": "build"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged",
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS"
    }
  },
  "lint-staged": {
    "*.ts": "eslint --cache --fix"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ]
  }
}
